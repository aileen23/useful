<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="board">

<insert id="create">
insert into tbl_board (serial,title,writer,content)
values (tbl_board_seq.nextval,#{title},#{writer},#{content})
</insert>

<select id="read" resultType="kr.co.useful.board.domain.BoardVO">
select * from tbl_board where serial=#{serial}
</select>

<update id="update">
update tbl_board set title=#{title},content=#{content} where serial=#{serial}
</update>

<delete id="delete">
delete from tbl_board where serial=#{serial}
</delete>

<select id="readAll" resultType="kr.co.useful.board.domain.BoardVO">
select * from tb1_board order by serial desc
</select>



</mapper>